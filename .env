# ===========================================
# CONFIGURAÇÃO DO WAZMEOW API
# ===========================================

# Configuração do Banco de Dados PostgreSQL
# Para desenvolvimento local: localhost
# Para Docker: postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=wazmeow
DB_SSLMODE=disable

# Configuração do Servidor HTTP
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Configuração de Logs
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuração de CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token

# Configuração de Sessões WhatsApp
MAX_SESSIONS=100
SESSION_TIMEOUT=3600s

# Configuração de Segurança
API_KEY=
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Configuração de Desenvolvimento
DEBUG=false
ENVIRONMENT=production

# Configuração de Webhooks
WEBHOOK_TIMEOUT=30s
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5s
WEBHOOK_WORKERS=5
WEBHOOK_QUEUE_SIZE=1000

# Configuração do Circuit Breaker para Webhooks
WEBHOOK_CB_MAX_FAILURES=5
WEBHOOK_CB_RESET_TIMEOUT=60s
WEBHOOK_CB_HALF_OPEN_MAX_CALLS=3

# Configuração de Rate Limiting para Webhooks
WEBHOOK_RATE_LIMIT_RPS=10
WEBHOOK_RATE_LIMIT_BURST=20
WEBHOOK_RATE_LIMIT_CLEANUP=5m

# Configuração do Redis (para futuro uso)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DB=0
